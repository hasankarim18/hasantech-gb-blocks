{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "hasantech-gb-blocks/card1",
  "title": "Card 1",
  "category": "text",
  "icon": "email",
  "description": "A customizable card block.",
  "keywords": [
    "title",
    "text",
    "gb",
    "card",
    "card 1"
  ],
  "textdomain": "hasantech-gb-blocks",
  "attributes": {
    "title": {
      "type": "string",
      "default": "Card title"
    },
    "paragraph": {
      "type": "string",
      "default": "This is a paragraph"
    },
    "image": {
      "type": "string",
      "default": "https://cdn.pixabay.com/photo/2025/09/24/17/10/squirrel-9853377_960_720.jpg"
    },
    "buttonText": {
      "type": "string",
      "default": "Click me"
    },
    "buttonLink": {
      "type": "string",
      "default": ""
    },
    "cardBackground": {
      "type": "string",
      "default": "#fff"
    },
    "cardTextColor": {
      "type": "string",
      "default": "#000"
    },
    "borderRadius": {
      "type": "string",
      "default": "0"
    },
    "boxShadow": {
      "type": "string",
      "default": ""
    },
    "boxShadowOnHover": {
      "type": "string",
      "default": ""
    },
    "authorName": {
      "type": "string",
      "default": "Hasan"
    },
    "authorImage": {
      "type": "string",
      "default": ""
    },
    "authorLink": {
      "type": "string",
      "default": ""
    },
    "date": {
      "type": "string",
      "default": ""
    },
    "titleAlign": {
      "type": "string",
      "default": "left"
    },
    "paragraphAlign": {
      "type": "string",
      "default": "left"
    },
    "buttonAlign": {
      "type": "string",
      "default": "left"
    },
    "align": {
      "type": "string",
      "default": "left"
    }
  },
  "supports": {
    "align": [
      "left",
      "center",
      "right"
    ]
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}